import std.io;

record T {
    int a;
}

record K {
    int z;
}

record X extends T {
    int p;
    string b;
}

record P extends K, X, T {
    int x;
    int y;
}

public proc void writer(chan<K>.write out) {
  K k = new K { z = 3 };
  //X x = new X { b = "Ben", p = 300, a = 20 };

  out.write(k);
}

public proc void reader(chan<K>.read in) {
  K value;
  value = in.read();
  println("The value is " + value.z);
}

public proc void main(string args[]) {
  chan<K> c;
  int a = 2;
  par {
    writer(c.write);
    reader(c.read);
  }
}